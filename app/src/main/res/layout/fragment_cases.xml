<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:custom="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
                name="viewmodel"
                type="org.sic4change.chuqabp.course.ui.main.cases.CasesViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clFilter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="visible">

            <EditText
                    android:id="@+id/etNameSurnames"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_margin="@dimen/margin_default"
                    android:hint="@string/filter_name_surnames"
                    android:inputType="textCapWords"
                    android:textSize="12sp">

            </EditText>

            <EditText
                    android:id="@+id/etPlace"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/etNameSurnames"
                    android:layout_margin="@dimen/margin_default"
                    android:hint="@string/filter_location"
                    android:inputType="textCapWords"
                    android:textSize="12sp">

            </EditText>

            <TextView
                    android:id="@+id/etRangeDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/etPlace"
                    android:hint="@string/filter_case_range_date"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="@dimen/margin_default"
                    android:layout_marginBottom="16dp">

            </TextView>

            <View
                    android:id="@+id/line"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/etRangeDate"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#c0c0c0"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="@dimen/margin_default"/>

            <ScrollView
                    android:id="@+id/svTypes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/line"
                    android:layout_marginStart="@dimen/margin_default"
                    android:layout_marginEnd="@dimen/margin_default"
                    android:layout_marginTop="@dimen/margin_default"
                    android:layout_marginBottom="@dimen/margin_default">

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <com.google.android.material.chip.Chip
                            android:id="@+id/cpPhysicFilter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/checkbox_title_physical"
                            android:theme="@style/Theme.MaterialComponents.Light"
                            android:layout_margin="4dp"
                            android:textSize="10sp"
                            app:selected="@{viewmodel.cpPhysicSelected}"/>

                    <com.google.android.material.chip.Chip
                            android:id="@+id/cpSexualFilter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/checkbox_title_sexual"
                            android:theme="@style/Theme.MaterialComponents.Light"
                            android:layout_margin="4dp"
                            android:textSize="10sp"
                            app:selected="@{viewmodel.cpSexualSelected}"/>

                    <com.google.android.material.chip.Chip
                            android:id="@+id/cpPsicologicalFilter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/checkbox_title_psychological"
                            android:theme="@style/Theme.MaterialComponents.Light"
                            android:layout_margin="4dp"
                            android:textSize="10sp"
                            app:selected="@{viewmodel.cpPsicologicalSelected}"/>

                    <com.google.android.material.chip.Chip
                            android:id="@+id/cpSocialFilter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/checkbox_title_social"
                            android:theme="@style/Theme.MaterialComponents.Light"
                            android:layout_margin="4dp"
                            android:textSize="10sp"
                            app:selected="@{viewmodel.cpSocialSelected}"/>

                    <com.google.android.material.chip.Chip
                            android:id="@+id/cpEconomicFilter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/checkbox_title_economic"
                            android:theme="@style/Theme.MaterialComponents.Light"
                            android:layout_margin="4dp"
                            android:textSize="10sp"
                            app:selected="@{viewmodel.cpEconomicSelected}"/>

                </LinearLayout>

            </ScrollView>

            <LinearLayout
                android:id="@+id/lyStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/svTypes"
                    android:layout_marginStart="@dimen/margin_default"
                    android:layout_marginEnd="@dimen/margin_default"
                    android:layout_marginTop="@dimen/margin_default"
                    android:layout_marginBottom="@dimen/margin_default">

                <ImageView
                        android:id="@+id/ivOpen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_open"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/margin_default">
                </ImageView>

                <belka.us.androidtoggleswitch.widgets.ToggleSwitch
                        android:id="@+id/swStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_default"
                        custom:activeBgColor="@color/colorPrimaryDark"
                        custom:activeTextColor="@android:color/white"
                        custom:inactiveBgColor="@android:color/darker_gray"
                        custom:inactiveTextColor="@android:color/black"
                        custom:separatorColor="@color/colorPrimaryDark"
                        custom:textToggleCenter="@string/all"
                        custom:textToggleLeft="@string/open_cases_filter"
                        custom:textToggleRight="@string/closed_cases_filter"
                        custom:toggleWidth="100dp">
                </belka.us.androidtoggleswitch.widgets.ToggleSwitch>

                <ImageView
                        android:id="@+id/ivClose"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_closed"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/margin_default">
                </ImageView>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/swipe_container"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@id/bttNavigation"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/clFilter"
                android:layout_marginBottom="@dimen/margin_default">

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:spanCount="1"
                    android:background="@color/white"
                    app:cases="@{viewmodel.cases}" />

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <ProgressBar
                android:id="@+id/progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:indeterminateTint="@color/colorPrimaryDark"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:visible="@{viewmodel.loading}"/>

        <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bttNavigation"
                android:layout_width="match_parent"
                android:layout_height="@dimen/hight_bottom_navigation"
                android:layout_gravity="bottom"
                android:background="@color/white"
                app:itemIconTint="@color/colorPrimary"
                app:itemTextColor="@color/colorPrimary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:menu="@menu/navigation_basic">

        </com.google.android.material.bottomnavigation.BottomNavigationView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnFilterCase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                app:backgroundTint="@color/colorPrimaryDark"
                app:layout_constraintBottom_toTopOf="@+id/btnNewCase"
                android:layout_marginBottom="@dimen/margin_default"
                android:layout_marginEnd="@dimen/margin_default"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/ic_search" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnNewCase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                app:backgroundTint="@color/colorPrimaryDark"
                app:layout_constraintBottom_toTopOf="@+id/bttNavigation"
                android:layout_marginBottom="@dimen/margin_default"
                android:layout_marginEnd="@dimen/margin_default"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/ic_add" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
