<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
                name="viewmodel"
                type="org.sic4change.chuqabp.course.ui.main.updateperson.UpdatePersonViewModel" />
    </data>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/ivUpdatePhotoPerson"
                    android:layout_width="@dimen/create_case_photo"
                    android:layout_height="@dimen/create_case_photo"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:clickable="true"
                    android:focusable="true"
                    app:url= "@{viewmodel.person.photo}"
                    android:padding="@dimen/image_border"
                    android:background="@color/colorPrimary"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:visibility="gone"/>

            <EditText
                    android:id="@+id/etName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_default"
                    android:hint="@string/name"
                    android:text="@{viewmodel.person.name}"
                    android:inputType="textCapWords"
                    android:textSize="14sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textColorHint="@color/common_google_signin_btn_text_light_disabled"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="@dimen/margin_medium"
                    app:layout_constraintTop_toBottomOf="@+id/ivUpdatePhotoPerson" />

            <EditText
                    android:id="@+id/etSurnames"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_default"
                    android:hint="@string/surname"
                    android:text="@{viewmodel.person.surnames}"
                    android:textSize="14sp"
                    android:inputType="textCapWords"
                    android:textColor="@color/colorPrimaryDark"
                    android:textColorHint="@color/common_google_signin_btn_text_light_disabled"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/etName" />

            <EditText
                    android:id="@+id/etBirthday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_default"
                    android:hint="@string/date"
                    android:text="@{viewmodel.person.birthdate}"
                    android:textSize="14sp"
                    android:inputType="date"
                    android:textColor="@color/colorPrimaryDark"
                    android:textColorHint="@color/common_google_signin_btn_text_light_disabled"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/etSurnames" />

            <EditText
                    android:id="@+id/etPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_default"
                    android:hint="@string/phone"
                    android:text="@{viewmodel.person.phone}"
                    android:inputType="phone"
                    android:textSize="14sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textColorHint="@color/common_google_signin_btn_text_light_disabled"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/etBirthday" />

            <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_default"
                    android:hint="@string/email"
                    android:text="@{viewmodel.person.email}"
                    android:textSize="14sp"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/colorPrimaryDark"
                    android:textColorHint="@color/common_google_signin_btn_text_light_disabled"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/etPhone" />

            <EditText
                    android:id="@+id/etLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_default"
                    android:hint="@string/location"
                    android:text="@{viewmodel.person.location}"
                    android:inputType="textCapWords"
                    android:textSize="14sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textColorHint="@color/common_google_signin_btn_text_light_disabled"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/etEmail" />

            <Button
                    android:id="@+id/btnUpdatePerson"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:text="@string/update_person"
                    android:layout_margin="@dimen/margin_default"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/etLocation" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</layout>
